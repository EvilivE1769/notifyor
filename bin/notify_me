#! /usr/bin/env ruby
require 'notifyor'
require 'notifyor/remote/connection'

loop do
  Notifyor::Configuration.notifyor_models.each do |model|
    connection = Notifyor::Remote::Connection.new(Notifyor::Configuration.configuration.ssh_host)
    connection.growl_message(model.downcase.gsub('::', '_'))
    puts "notify #{model}"
  end
  sleep 5
end